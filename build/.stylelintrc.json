{
    "extends": ["stylelint-config-recommended"],

    "plugins": [
        "stylelint-order"
    ],

    "rules": {
        "font-family-no-missing-generic-family-keyword": null,
        "no-descending-specificity": null,
        "no-duplicate-selectors": null,

        "plugin/no-unsupported-browser-features": [true, {
            "browsers": ["Chrome > 88"],
            "ignore": ["css-masks"],
            "ignorePartialSupport": true
          }],
  
          "order/order": [
              ["declarations", "custom-properties"],
              {"severity": "warning"}
          ],
  
          "order/properties-order": [
              [
                  {
                      "groupName": "Content & Display",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "display",
                          "content"
                      ]
                  },
                  {
                      "groupName": "Font & Text",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "font-family",
                          "font-size",
                          "font-weight",
                          "text-rendering",
                          "font-style",
                          "line-height",
                          "letter-spacing",
                          "text-decoration",
                          "text-transform",
                          "text-shadow",
                          "text-align",
                          "hyphens",
                          "white-space",
                          "overflow-wrap",
                          "font-display",
                          "src"
                      ]
                  },
                  {
                      "groupName": "Size",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "height",
                          "max-height",
                          "min-height",
                          "width",
                          "max-width",
                          "min-width",
                          "backdrop-position",
                          "background-position-y",
                          "background-position-x",
                          "backdrop-size",
                          "resize"
                      ]
                  },
                  {
                      "groupName": "Color & Background",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "color",
                          "fill",
                          "stroke-width",
                          "background",
                          "background-color",
                          "background-image",
                          "backdrop-filter",
                          "backdrop-repeat",
                          "box-shadow",
                          "opacity"
                      ]
                  },
                  {
                      "groupName": "Position",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "position",
                          "top",
                          "right",
                          "bottom",
                          "left",
                          "z-index"
                      ]
                  },
                  {
                      "groupName": "Padding & Margin",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "padding",
                          "padding-top",
                          "padding-right",
                          "padding-bottom",
                          "padding-left",
                          "margin",
                          "margin-top",
                          "margin-right",
                          "margin-bottom",
                          "margin-left"
                      ]
                  },
                  {
                      "groupName": "Border",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "border",
                          "border-image",
                          "border-width",
                          "border-style",
                          "border-color",
                          "border-top",
                          "border-right",
                          "border-bottom",
                          "border-left",
                          "border-radius",
                          "border-top-right-radius",
                          "border-bottom-right-radius",
                          "border-bottom-left-radius",
                          "border-top-left-radius"
                      ]
                  },
                  {
                      "groupName": "Special",
                      "emptyLineBefore": "threshold",
                      "noEmptyLineBetween": true,
                      "properties": [
                          "transform",
                          "transition",
                          "transition-duration",
                          "filter",
                          "cursor"
                      ]
                  }
              ],
              {
                  "emptyLineBeforeUnspecified": "threshold",
                  "unspecified": "bottom",
                  "emptyLineMinimumPropertyThreshold": 6,
                  "severity": "warning"
              }
            ]
        }
}